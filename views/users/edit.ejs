<% layout("/layouts/boilerplate") %>

<style>
  .img-container {
    width: 203px;
    height: auto;
    overflow: hidden;
  }

  .img {
    overflow: hidden;
    height: auto;
    display: block;
    border-radius: 50%;
  }

  .main {
    border: 2px solid #993955;
    border-radius: 20px;
    margin-left: 220px;
    height: 250px;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
  }

  .btn {
    background-color: #993955;
  }
</style>

<div class="col-8 ml-8 main mt-3">
  <div class="img-container">
    <img class="img" src="<%=currUser.photo ||
    "https://media.istockphoto.com/id/1337144146/vector/default-avatar-profile-icon-vector.jpg?s=612x612&w=0&k=20&c=BIbFwuv7FxTWvh5S3vB6bkT0Qv8Vn8N5Ffseq84ClGI="%>"
    alt="Profile Pic" style="height: 200px; width: 200px; object-fit:
    cover;border-radius: 50%"/>
  </div>
  <form
    action="/editProfile/<%=currUser._id%>?_method=Patch"
    method="POST"
    enctype="multipart/form-data"
    class="needs-validation"
    novalidate>
    <div class="mb-3">
      <label for="image" class="form-label"></label>
      <input
        type="file"
        class="form-control"
        name="image"
        placeholder="Add  your Image"
        required />
    </div>
    <button class="btn btn-dark">Edit</button>
  </form>
</div>
